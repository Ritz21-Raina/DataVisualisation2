{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300,
  "height": 200,
  "data": {
    "url": "https://raw.githubusercontent.com/Ritz21-Raina/DataVisualisation2/refs/heads/main/Data/dataset_for_map_2010.csv"
  },
  "transform": [
    {
      "lookup": "state",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Ritz21-Raina/DataVisualisation2/refs/heads/main/Data/TopoJSON.json",
          "format": {"type": "topojson", "feature": "my"}
        },
        "key": "properties.name",
        "fields": ["properties", "geometry", "type"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "birth_rate",
      "type": "quantitative",
      "title": "Birth Rate (per 1,000)",
      "scale": {"range": ["#ffd1dc", "#ffb6c1", "#ff85a2", "#ff69b4"]}
    },
    "tooltip": [
      {"field": "state", "title": "State"},
      {"field": "birth_rate", "title": "Birth Rate per 1,000", "format": ".2f"},
      {"field": "abs", "title": "Total Births", "format": ","},
      {
        "field": "Malaysia_total_population",
        "title": "Population",
        "format": ","
      }
    ]
  },
  "projection": {"type": "mercator"},
  "config": {}
}
