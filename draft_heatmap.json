{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Heatmap of birth counts by state and ethnicity with gender filter (purple gradient).",
  "title": {
    "text": "Birth Counts by State and Ethnicity",
    "font": "Poppins",
    "fontSize": 20,
    "color": "#3C3C3C"
  },
  "width": 700,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/Ritz21-Raina/DataVisualisation2/refs/heads/main/Data/dataset.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "selectedSex",
      "value": "male",
      "bind": {
        "input": "select",
        "options": ["male", "female"],
        "name": "Gender: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.ethnicity!== 'overall'"
    },
    {
      "filter": "datum.sex == selectedSex"
    },
    {
      "calculate": "toNumber(datum.abs)",
      "as": "birth_count"
    },
    {
      "filter": "isFinite(datum.birth_count)"
    }
  ],
  "mark": "rect",
  "encoding": {
    "y": {
      "field": "state",
      "type": "ordinal",
      "axis": {"title": "State"}
    },
    "x": {
      "field": "ethnicity",
      "type": "ordinal",
      "axis": {"title": "Ethnicity", "labelAngle": -45}
    },
    "color": {
      "field": "birth_count",
      "type": "quantitative",
      "scale": {
        "range": ["#f3e8ff", "#d8b4fe", "#a855f7", "#6b21a8"]
      },
      "legend": {"title": "Birth Count"}
    },
    "tooltip": [
      {"field": "state", "title": "State"},
      {"field": "ethnicity", "title": "Ethnicity"},
      {"field": "abs", "title": "Birth Count"},
      {"field": "Year", "title": "Year"},
      {"field": "sex", "title": "Gender"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {
      "labelFont": "Poppins",
      "titleFont": "Poppins",
      "labelFontSize": 12,
      "titleFontSize": 13,
      "labelColor": "#5A5A5A",
      "titleColor": "#5A5A5A"
    },
    "title": {"fontSize": 18, "fontWeight": "600"},
    "background": "#fffafc"
  }
}

