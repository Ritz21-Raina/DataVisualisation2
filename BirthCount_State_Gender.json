{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Statewise Population Pyramid with Year Slider (Overall Ethnicity)",
   "title": {
    "text": "Malaysiaâ€™s Population Pyramid by State and Year",
    "font": "Poppins",
    "fontSize": 20,
    "color": "#3C3C3C"
  },
  "width": 500,
  "height": 300,
  "background": "#FFF8E7",
  "data": {
    "url": "https://raw.githubusercontent.com/Ritz21-Raina/DataVisualisation2/refs/heads/main/Data/dataset.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.ethnicity == 'overall'"},
    {"filter": "datum.sex == 'male' || datum.sex == 'female'"},
    {"filter": "toNumber(datum.Year) == selectedYear"},
    {"filter": "isFinite(toNumber(datum.abs))"},
    {
      "calculate": "datum.sex === 'male' ? -toNumber(datum.abs) : toNumber(datum.abs)",
      "as": "population_signed"
    }
  ],
  "mark": {"type": "bar"},
  "encoding": {
    "y": {
      "field": "state",
      "type": "ordinal",
      "axis": {"title": "State", "labelLimit": 140}
    },
    "x": {
      "field": "population_signed",
      "type": "quantitative",
      "axis": {
        "title": "Population",
        "format": "s",
        "grid": true,
        "labelExpr": "abs(datum.value)"
      },
      "scale": {"domain": [-60000, 60000]}
    },
    "color": {
      "field": "sex",
      "type": "nominal",
      "scale": {"domain": ["male", "female"], "range": ["#7eb6ff", "#ff8fa3"]},
      "legend": {"orient": "top", "title": "Gender"}
    },
    "tooltip": [
      {"field": "state", "title": "State"},
      {"field": "sex", "title": "Gender"},
      {"field": "abs", "title": "Population", "format":","},
      {"field": "Year", "title": "Year"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 12, "titleFontSize": 13},
    "title": {"fontSize": 18, "fontWeight": "600"},
    "background": "#fff",
    "bar": {"binSpacing": 0}
  }
}
